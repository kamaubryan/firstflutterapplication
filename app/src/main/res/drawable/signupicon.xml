<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#50000000" /> <!-- Shadow color with transparency -->
            <corners android:radius="19dp" />  <!-- Border radius -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#c7c8c5   " /> <!-- Background color -->
            <stroke android:width="2dp"/> <!-- Border color -->
            <corners android:radius="16dp" /> <!-- Border radius -->
        </shape>
    </item>
</layer-list>